<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Угадай хобби — Диалог"
        Height="720" Width="1040"
        MinHeight="560" MinWidth="900"
        Background="#0E1116"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Палитра -->
        <SolidColorBrush x:Key="BrushBg"        Color="#0E1116"/>
        <SolidColorBrush x:Key="BrushCard"      Color="#161B22"/>
        <SolidColorBrush x:Key="BrushBorder"    Color="#1F2630"/>
        <SolidColorBrush x:Key="BrushText"      Color="#E6EDF3"/>
        <SolidColorBrush x:Key="BrushTextMuted" Color="#B9C3CC"/>
        <SolidColorBrush x:Key="BrushAccent"    Color="#22A2F2"/>
        <SolidColorBrush x:Key="BrushProgram"   Color="#2B3440"/>
        <SolidColorBrush x:Key="BrushBlock"     Color="#0F1420"/>
        <SolidColorBrush x:Key="BrushBlockBorder" Color="#314056"/>

        <!-- Стиль кнопки -->
        <Style x:Key="Btn" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
            <Setter Property="Background" Value="#1E2430"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#283142"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#202838"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль текстбокса -->
        <Style x:Key="Tb" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
            <Setter Property="Background" Value="#141923"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="SpellCheck.IsEnabled" Value="False"/>
        </Style>

        <!-- Шаблон сообщения -->
        <DataTemplate x:Key="ChatMessageTemplate">
            <Grid Margin="0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="60*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0"
                    CornerRadius="16"
                    Padding="12"
                    BorderThickness="1"
                    HorizontalAlignment="Left"
                    MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{StaticResource BrushProgram}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPlayer}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsBlock}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <TextBox Text="{Binding Text}"
                            Foreground="{StaticResource BrushText}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            FontSize="15"
                            TextWrapping="Wrap"
                            IsReadOnly="True"
                            AcceptsReturn="True"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Disabled"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="0"
                    CornerRadius="16"
                    Padding="12"
                    BorderThickness="1"
                    HorizontalAlignment="Left"
                    MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{StaticResource BrushBlock}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BrushBlockBorder}"/>
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsBlock}" Value="True"/>
                                        <Condition Binding="{Binding IsPlayer}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <Border Background="#111726" BorderBrush="#2A3850" BorderThickness="1" CornerRadius="12" Padding="10">
                            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" MaxHeight="360">
                                <TextBox Text="{Binding Text}"
                                    Foreground="{StaticResource BrushText}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0"
                                    FontFamily="Consolas"
                                    FontSize="14"
                                    TextWrapping="Wrap"
                                    IsReadOnly="True"
                                    AcceptsReturn="True"
                                    HorizontalScrollBarVisibility="Disabled"
                                    VerticalScrollBarVisibility="Auto"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="1"
                    CornerRadius="16"
                    Padding="12"
                    BorderThickness="1"
                    HorizontalAlignment="Right"
                    Background="{StaticResource BrushAccent}"
                    BorderBrush="#1894E4"
                    MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPlayer}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <TextBox Text="{Binding Text}"
                        Foreground="#001018"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="0"
                        FontSize="15"
                        TextWrapping="Wrap"
                        IsReadOnly="True"
                        AcceptsReturn="True"
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Disabled"/>
                </Border>

            </Grid>
        </DataTemplate>

    </Window.Resources>
    
    <Grid Background="{StaticResource BrushBg}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0"
            Background="{StaticResource BrushCard}"
            BorderBrush="{StaticResource BrushBorder}"
            BorderThickness="0,0,0,1"
            Padding="16">
            <TextBlock Text="Угадай хобби — диалог"
                 Foreground="{StaticResource BrushText}"
                 FontWeight="SemiBold"
                 FontSize="18" />
        </Border>

        <!-- Лента сообщений -->
        <Border Grid.Row="1" Background="{StaticResource BrushBg}">
            <ScrollViewer x:Name="ChatScroll"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    Padding="18,16">
                <ItemsControl ItemsSource="{Binding Messages}"
                    ItemTemplate="{StaticResource ChatMessageTemplate}"
                    HorizontalContentAlignment="Stretch">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

            </ScrollViewer>
        </Border>

        <!-- Панель ввода и кнопок -->
        <Border Grid.Row="2"
            Background="{StaticResource BrushCard}"
            BorderBrush="{StaticResource BrushBorder}"
            BorderThickness="0,1,0,0"
            Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Быстрые команды -->
                <StackPanel Orientation="Horizontal" Grid.Row="0"
                    Visibility="{Binding ShowQuickCommands, Converter={StaticResource BoolToVis}}">
                    <Button Style="{StaticResource Btn}" Content="Давай сыграем"     Command="{Binding QuickPlayCommand}"/>
                    <Button Style="{StaticResource Btn}" Content="Показать базу"     Command="{Binding QuickShowAllCommand}"/>
                    <Button Style="{StaticResource Btn}" Content="Что ты знаешь…"    Command="{Binding QuickKnowAboutCommand}"/>
                    <Button Style="{StaticResource Btn}" Content="Известно ли тебе…" Command="{Binding QuickKnownCheckCommand}"/>
                </StackPanel>

                <!-- Кнопки Да/Нет -->
                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,8,0,0"
                    Visibility="{Binding ShowYesNo, Converter={StaticResource BoolToVis}}">
                    <Button Style="{StaticResource Btn}" Content="Да"  Command="{Binding YesCommand}"/>
                    <Button Style="{StaticResource Btn}" Content="Нет" Command="{Binding NoCommand}"/>
                </StackPanel>
                
                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="InputBox"
                   Style="{StaticResource Tb}"
                   Grid.Column="0"
                   Height="80"
                   Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                   VerticalAlignment="Top"
                   PreviewKeyDown="InputBox_PreviewKeyDown" />

                    <Button Style="{StaticResource Btn}"
                  Grid.Column="1"
                  Content="Отправить"
                  Command="{Binding SendCommand}"
                  Height="40"
                  VerticalAlignment="Top"
                  Margin="10,0,0,0"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>